<Window x:Class="InterfaceWpf.Interface.AdicionaIngrediente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceWpf.Interface"
        mc:Ignorable="d"
        Title="AdicionaIngrediente" Height="300" Width="500" ResizeMode="NoResize">
    <Grid Height="300" Margin="0,0,0,-29">
        <Label Content="Quantidade" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top" FontFamily="Nirmala UI Semilight" Height="33"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="129,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="361" FontFamily="Nirmala UI Semilight" TextChanged="TextBox_TextChanged"/>
        <Button Content="Confirma" HorizontalAlignment="Left" Margin="7,208,0,0" VerticalAlignment="Top" Width="481" RenderTransformOrigin="0.5,0.5" Height="24" Click="Button_Confirma" Background="#FFDACDB9" FontFamily="Nirmala UI Semilight">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.273"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Content="ADIÇÃO DE INGREDIENTE" Margin="0,10,0,233" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Background="#FFDACDB9" FontFamily="Nirmala UI Semilight"/>
        <Label Content="Ingrediente" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" FontFamily="Nirmala UI Semilight" Height="33"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="7,238,0,0" VerticalAlignment="Top" Width="481" RenderTransformOrigin="0.5,0.5" Height="24" Click="Button_Cancela" Background="#FFDACDB9" FontFamily="Nirmala UI Semilight">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.273"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <ComboBox HorizontalAlignment="Left" Margin="129,88,0,0" VerticalAlignment="Top" Width="361">
            <ComboBoxItem Content="Café" HorizontalAlignment="Left" Width="359"/>
            <ComboBoxItem Content="Leite" HorizontalAlignment="Left" Width="359"/>
            <ComboBoxItem Content="Chocolate" HorizontalAlignment="Left" Width="359"/>
        </ComboBox>

    </Grid>
</Window>
